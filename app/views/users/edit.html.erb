<h2>ユーザー編集</h2>
<% if @user.errors.any? %>
  <ul class="alert alert-danger">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, url: user_path(@user), local: true) do |f| %>
  <div>
    <%= image_tag 'https://placehold.jp/64x64.png', class: 'mr-3 rounded-circle' %>
  </div>

  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワード確認' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :profile_description, '自己紹介' %>
    <%= f.text_area :profile_description, class: 'form-control', rows: 5 %>
  </div>

  <div class="actions">
    <%= f.submit '更新する', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '戻る', root_path %>



